{
  "name": "popr-filler",
  "version": "1.0.0",
  "private": true,
  "main": "src/electron-starter.js",
  "homepage": "./",
  "dependencies": {
    "cross-env": "^7.0.3",
    "exceljs": "^4.4.0",
    "file-saver": "^2.0.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "cross-env WEB_URL=http://localhost:3000 electron .",
    "electron-prd": "electron .",
    "electron-forge": "WEB_URL=http://localhost:3000 electron-forge start",
    "electron-forge-prd": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make ",
    "build-all": "npm run build && npm run make"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "electron": "^30.0.8",
    "node-stdlib-browser": "^1.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "version": "1.0.1",
        "name": "POPRFiller",
        "executableName": "POPRFiller",
        "ignore": [
          "node_modules/",
          "test/",
          ".git/",
          "README.md"
      ],
        "asar": {
          "unpack": "**/node_modules/**"
        },

        "prune": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "POPR_Filler",
            "version": "1.0.1",
            "authors": "K Ngan",
            "description": "an automatic excel table filler for PO and PR",
            "noMsi": true
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "config": {
            "name": "POPR_Filler",
            "authors": "K Ngan",
            "description": "an automatic excel table filler for PO and PR",
            "noMsi": true
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
